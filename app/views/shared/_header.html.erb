<section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
            <img  src="https://cdn-icons-png.flaticon.com/512/857/857681.png" jsaction="VQAsE" class="sFlh5c pT0Scc iPVvYb"
                 style="color:#F7F7F7; max-width: 101px; height: 61px; margin: 0px; width: 41px;" alt="Dish - Free food icons"
                 jsname="kn3ccd" aria-hidden="false">
            <span class="has-text-weight-bold is-size-4 ml-4">Foodlog</span>
          <% end %>
          <span class="navbar-burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <span class="navbar-item">
            <%= link_to  "Create new entry", new_entry_path, class: "button is-success"%>
              </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title">
        <% if content_for(:title) %>
        <%= yield :title %>
        <% else %>
          Foodlog
        <% end %>
      </p>
    </div>
  </div>
</section>